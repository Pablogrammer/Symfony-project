{% extends 'base.html.twig' %}

{% block title %}Libro{% endblock %}

{% block body %}
    <h1>Libro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ libro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ libro.titulo }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ libro.autor }}</td>
            </tr>
            <tr>
                <th>Editorial</th>
                <td>{{ libro.editorial }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ libro.genero }}</td>
            </tr>
            <tr>
                <th>NumEjemplares</th>
                <td>{{ libro.numEjemplares }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_libro_index') }}">Volver</a>
    <br>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_libro_edit', {'id': libro.id}) }}">Editar</a>
        {{ include('libro/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
